<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_bg"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_parent_rounded_corner"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/imageview_profile_pic_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textview_name_label_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageview_profile_pic_home"
            android:layout_marginTop="15dp"
            android:text="Name:"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_name_value_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textview_name_label_home"
            android:layout_below="@+id/imageview_profile_pic_home"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:fontFamily="sans-serif"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_email_label_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textview_name_label_home"
            android:layout_marginTop="15dp"
            android:text="Email:"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_email_value_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_name_label_home"
            android:layout_marginTop="15dp"
            android:layout_alignLeft="@id/textview_name_value_home"
            android:fontFamily="sans-serif"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_gender_label_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textview_email_label_home"
            android:layout_marginTop="15dp"
            android:text="Gender:"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_gender_value_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_email_label_home"
            android:layout_alignLeft="@id/textview_name_value_home"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>